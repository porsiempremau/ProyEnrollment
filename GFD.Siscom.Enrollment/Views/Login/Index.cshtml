@{ 
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="h-100">
    <div class="h-100 no-gutters row">
        <div class="d-none d-lg-block col-lg-7">
            
            <div class="slider-light">
                <div class="slick-slider">
                    <div>
                        <div class="position-relative h-100 d-flex justify-content-center align-items-center bg-plum-plate" tabindex="-1">
                            <div class="slide-img-bg" style="background-image: url('/img/Login/fondoLogin.png');">
                                <div style="color: aliceblue; text-align: inherit; padding: 199px;">
                                    <img src="~/img/Login/siscom-blanco.png" />

                                    <p style="font-size: 27px; margin-bottom: auto;">
                                        Sistema de Servicios Comerciales.
                                    </p>
                                    <p style="margin-bottom: auto;">
                                        Sistema para cobro, administración y gestión de los servicios comerciales.
                                    </p>
                                    <p style="font-size: 9px;">
                                        v1.7
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="h-100 d-flex bg-white justify-content-center align-items-center col-md-12 col-lg-5">
            <div class="mx-auto app-login-box col-sm-12 col-md-10 col-lg-9">
                <div class="app-logo"></div>
                <h4 class="mb-0">
                    <span class="d-block">Ingreso al Sistema</span>
                    @*<span>Please sign in to your account.</span>*@
                </h4>
                @*<h6 class="mt-3">No account? <a href="javascript:void(0);" class="text-primary">Sign up now</a></h6>*@
                <div class="divider row"></div>
                <div>
                    <form id="sign_in" method="post" onsubmit="Login(event)">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="position-relative form-group"><label for="UserEmail" class="">Usuario</label><input name="UserEmail" id="UserEmail" placeholder="Usuario" type="text" class="form-control"></div>
                            </div>
                            <div class="col-md-6">
                                <div class="position-relative form-group">
                                    <label for="UserPass" class="">Contraseña</label><input name="UserPass" id="UserPass" placeholder="Contraseña" type="password" class="form-control">
                                </div>
                            </div>
                        </div>
                        @*<div class="position-relative form-check"><input name="check" id="exampleCheck" type="checkbox" class="form-check-input"><label for="exampleCheck" class="form-check-label">Keep me logged in</label></div>*@
                        <div class="divider row"></div>
                        <div class="d-flex align-items-center">
                            <div class="ml-auto">
                                @*<a href="javascript:void(0);" class="btn-lg btn btn-link">Recover Password</a>*@
                                <button type="submit" class="btn btn-primary btn-lg">Ingresar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



