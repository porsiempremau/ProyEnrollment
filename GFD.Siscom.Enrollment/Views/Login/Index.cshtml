@{ 
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
               
<div style="background-image: url('img/login/fondologin.png'); background-size: 100% 100%; height: 70vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col col-2">

                
                <img src="~/img/Login/siscom-logo.png" width="200" />

                <form id="sign_in" action="/Login" method="post">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="position-relative form-group">
                                <label for="exampleEmail" class="">Usuario</label>
                                <input name="UserEmail" id="UserEmail" placeholder="Usuario" type="text" class="form-control" value="Uriel">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="position-relative form-group">
                                <label for="examplePassword" class="">Contraseña</label>
                                <input name="UserPass" id="UserPass" placeholder="Contraseña" type="password" class="form-control" value="Presidencia2019">
                            </div>
                        </div>
                    </div>

                    <div class="divider row"></div>
                    <div class="col-md-12 text-center">
                        <button type="submit" id="btn" class="btn btn-dark-blue btn-lg form-control block-page-btn-example-1">Ingresar</button>
                    </div>
                </form>
            </div>                    
        </div>
    </div>            
</div>
    
<div class="row">
    <div class="d-none d-lg-block col-lg-8">
        <div class="position-relative h-100 d-flex justify-content-center align-items-center bg-plum-plate" tabindex="-1">

            <div class="slider-content">
                <div class="logo" [@animate]="{value:'*',params:{scale:'0.2'}}">

                    <img src="">
                    <h4 class="siscom" style="position:absolute;">SISCOM</h4>
                </div>


                <h1 class="siscom" style="margin-top:50px">Sistema de Servicios Comerciales</h1>
                <p class="subtitle">Sistema para cobro, administración y gestión de los servicios comerciales.</p>
            </div>
        </div>
    </div>
</div>

