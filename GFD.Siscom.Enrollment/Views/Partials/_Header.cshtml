@using GFD.Siscom.Enrollment.Utilities.Auth;

<div class="app-header header-shadow color-header">
    <div class="app-header__logo">
        @*<div class="logo-src"></div>*@
        <div id="divgfdsiscom" class="logo-src color-white" title="Ir a Inicio">GFDSISCOM</div>
        <div class="header__pane ml-auto">
            <div>
                <button type="button" class="hamburger close-sidebar-btn hamburger--elastic"
                        data-class="closed-sidebar">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>
        </div>
    </div>
    <div class="app-header__mobile-menu">
        <div>
            <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
            </button>
        </div>
    </div>
    <div class="app-header__menu">
        <span>
            <button type="button"
                    class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                <span class="btn-icon-wrapper">
                    <i class="fa fa-ellipsis-v fa-w-6"></i>
                </span>
            </button>
        </span>
    </div>
    <div class="app-header__content">
        
        <div class="app-header-right">
            @if (Auth.Login.HasRoles("Admin|Supervisor"))
            {
                <div class="header-dots">
                    <a href="/Cancelations/CancelationsToAuthIndex" class="mb-2 mr-2 btn-icon btn-icon-only btn btn-link btn-sm">
                        <i class="fas fa-ban btn-icon-wrapper font-size-xlg" title="Autorizar Cancelación" style="color: white;"></i>
                        <div id="divNumberAuthCancel"></div>
                    </a>
                </div>

                <div class="header-dots">
                    <a href="/Discounts/AuthDiscountsIndex" class="mb-2 mr-2 btn-icon btn-icon-only btn btn-link btn-sm">
                        <i class="fas fa-handshake btn-icon-wrapper font-size-xlg" title="Autorizar Descuentos" style="color: white;"></i>
                        <div id="divNumberAuthDiscount"></div>
                    </a>
                </div>
            }

            <div class="header-btn-lg pr-0">
                <div class="widget-content p-0">
                    <div class="widget-content-wrapper">
                        <div class="widget-content-left">
                            <div class="btn-group">
                                @*<a href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">*@
                                <a onclick="openLogout()" data-toggle="" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
                                    <img width="42" class="rounded-circle" src="~/img/Login/siscom-logo.png"
                                         alt="">
                                    <i class="fa fa-angle-down ml-2 opacity-8 color-white"></i>
                                </a>
                                <div id="DropDown" tabindex="-1" role="menu" aria-hidden="true"
                                     class="rm-pointers dropdown-menu-lg dropdown-menu dropdown-menu-right">
                                    <div class="dropdown-menu-header">
                                        <div class="dropdown-menu-header-inner bg-info">
                                            <div class="menu-header-image opacity-2">
                                                @*style="background-image: url('assets/images/dropdown-header/city3.jpg');">*@
                                            </div>
                                            <div class="menu-header-content text-left">
                                                <div class="widget-content p-0">
                                                    <div class="widget-content-wrapper">
                                                        <div class="widget-content-left mr-3">
                                                            <img width="42" class="rounded-circle"
                                                                 src="~/img/Login/siscom-logo.png" alt="">
                                                        </div>
                                                        <div class="widget-content-left">
                                                            <div class="widget-heading color-white">
                                                                @Auth.Login.FullName
                                                            </div>
                                                            <div class="widget-subheading opacity-8 color-white">
                                                                @Auth.Login.Email
                                                            </div>
                                                            <div class="widget-subheading opacity-8 color-white">
                                                                <b>Perfil:</b> @Auth.Login.RolName[0]
                                                            </div>
                                                        </div>
                                                        <div class="widget-content-right mr-2">
                                                            <form asp-controller="Login" asp-action="Logout" method="post">
                                                                <button type="submit" class="btn-pill btn-shadow btn-shine btn btn-focus">
                                                                    Salir
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="widget-content-left  ml-3 header-user-info">
                            <div class="widget-heading color-white">
                                @Auth.Login.FullName
                            </div>
                            <div id="divContentDivision" class="widget-subheading color-white"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>