@using GFD.Siscom.Enrollment.Utilities;
@using GFD.Siscom.Enrollment.Utilities.Auth;
<div class="app-sidebar sidebar-shadow">
    <div class="app-header__logo">
        <div class="logo-src"></div>
        <div class="header__pane ml-auto">
            <div>
                <button type="button" class="hamburger close-sidebar-btn hamburger--elastic"
                        data-class="closed-sidebar">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>
        </div>
    </div>
    <div class="app-header__mobile-menu">
        <div>
            <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
            </button>
        </div>
    </div>
    <div class="app-header__menu">
        <span>
            <button type="button"
                    class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                <span class="btn-icon-wrapper">
                    <i class="fa fa-ellipsis-v fa-w-6"></i>
                </span>
            </button>
        </span>
    </div>
    <div class="scrollbar-sidebar">
        <div class="app-sidebar__inner">
            <ul class="vertical-nav-menu">
                <li class="app-sidebar__heading">Menu</li>
                @if (Auth.Login.HasRole("Admin"))
                {
                    <li>
                        <a href="#">
                            <i class="metismenu-icon fas fa-archive"></i>
                            Catálogos
                            <i class="metismenu-state-icon fa fa-angle-down caret-left"></i>
                        </a>
                        <ul>
                            <li>
                                <a href="">
                                    <i class="metismenu-icon"></i>
                                    Catálogos de Ubicación
                                </a>
                                <ul>
                                    <li class="@(ViewData["Title"].ToString() == "Regiones" ? "mm-active active-GFD" : "")">
                                        <a href="/Regions/Get/0">
                                            <i class="metismenu-icon">
                                            </i>Regiones
                                        </a>
                                    </li>
                                    <li class="@(ViewData["Title"].ToString() == "Clasificacion" ? "mm-active active-GFD" : "")">
                                        <a href="/Clasifications/Get/0">
                                            <i class="metismenu-icon">
                                            </i>Clasificación
                                        </a>
                                    </li>
                                    <li class="@(ViewData["Title"].ToString() == "Estados" ? "mm-active active-GFD" : "")">
                                        <a href="/States/Get/0?isToSelect=false">
                                            <i class="metismenu-icon">
                                            </i>Estados
                                        </a>
                                    </li>
                                    <li class="@(ViewData["Title"].ToString() == "Municipios" ? "mm-active active-GFD" : "")">
                                        <a href="/Towns/Index">
                                            <i class="metismenu-icon">
                                            </i>Municipios
                                        </a>
                                    </li>
                                    <li class="@(ViewData["Title"].ToString() == "Colonias" ? "mm-active active-GFD" : "")">
                                        <a href="/Suburbs/Index">
                                            <i class="metismenu-icon">
                                            </i>Colonias
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="">
                                    <i class="metismenu-icon">
                                    </i>Catálogos de Contrato
                                </a>
                                <ul>
                                    <li class="@(ViewData["Title"].ToString() == "Tipo de Servicio" ? "mm-active active-GFD" : "")">
                                        <a href="/CatalogTypes/Get?type=TypeServices&name=Tipo de Servicio&isToSelect=false">
                                            <i class="metismenu-icon">
                                            </i>Tipo Servicio
                                        </a>
                                    </li>
                                    <li class="@(ViewData["Title"].ToString() == "Tipo de Toma" ? "mm-active active-GFD" : "")">
                                        @if (Plataform.IsAyuntamiento)
                                        {
                                            <a href="/CatalogTypes/Get?type=TypeIntakes&name=Tipo de Toma&isToSelect=false">
                                                <i class="metismenu-icon"></i>Tipo Predio
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="/CatalogTypes/Get?type=TypeIntakes&name=Tipo de Toma&isToSelect=false">
                                                <i class="metismenu-icon"></i>Tipo de Toma
                                            </a>
                                        }

                                    </li>
                                    <li class="@(ViewData["Title"].ToString() == "Tipo de Uso" ? "mm-active active-GFD" : "")">
                                        <a href="/CatalogTypes/Get?type=TypeUses&name=Tipo de Uso&isToSelect=false">
                                            <i class="metismenu-icon">
                                            </i>Tipo de Uso
                                        </a>
                                    </li>
                                    <li class="@(ViewData["Title"].ToString() == "Tipo de Consumo" ? "mm-active active-GFD" : "")">
                                        <a href="/CatalogTypes/Get?type=TypeConsumes&name=Tipo de Consumo&isToSelect=false">
                                            <i class="metismenu-icon">
                                            </i>Tipo de Consumo
                                        </a>
                                    </li>
                                    <li class="@(ViewData["Title"].ToString() == "Tipo de Regimen" ? "mm-active active-GFD" : "")">
                                        <a href="/CatalogTypes/Get?type=TypeRegimes&name=Tipo de Regimen&isToSelect=false">
                                            <i class="metismenu-icon">
                                            </i>Tipo Regimen
                                        </a>
                                    </li>
                                    <li class="@(ViewData["Title"].ToString() == "Tipo de Negocio" ? "mm-active active-GFD" : "")">
                                        <a href="/CatalogTypes/Get?type=TypeCommertialBusinesses&name=Tipo de Negocio&isToSelect=false">
                                            <i class="metismenu-icon">
                                            </i>Tipo de Negocio
                                        </a>
                                    </li>
                                    <li class="@(ViewData["Title"].ToString() == "Estado de Sevicio" ? "mm-active active-GFD" : "")">
                                        <a href="/CatalogTypes/Get?type=TypeStateServices&name=Estado de Sevicio&isToSelect=false">
                                            <i class="metismenu-icon">
                                            </i>Estado de Servicio
                                        </a>
                                    </li>
                                    <li class="@(ViewData["Title"].ToString() == "Periodo" ? "mm-active active-GFD" : "")">
                                        <a href="/CatalogTypes/Get?type=TypePeriods&name=Periodo&isToSelect=false">
                                            <i class="metismenu-icon">
                                            </i>Periodo
                                        </a>
                                    </li>
                                    @if (!Plataform.IsAyuntamiento)
                                    {
                                        <li class="@(ViewData["Title"].ToString() == "Diametro" ? "mm-active active-GFD" : "")">
                                            <a href="/CatalogTypes/Get?type=Diameters&name=Diametro&isToSelect=false">
                                                <i class="metismenu-icon">
                                                </i>Diametro
                                            </a>
                                        </li>
                                    }
                                    <li class="@(ViewData["Title"].ToString() == "Tipo Transacción" ? "mm-active active-GFD" : "")">
                                        <a href="/CatalogTypes/Get?type=TypeTransaction&name=Tipo Transacción&isToSelect=false">
                                            <i class="metismenu-icon">
                                            </i>Tipo Transacción
                                        </a>
                                    </li>
                                    <li class="@(ViewData["Title"].ToString() == "Tipo de Clasificación" ? "mm-active active-GFD" : "")">
                                        <a href="/CatalogTypes/Get?type=TypeClassifications&name=Tipo de Clasificación&isToSelect=false">
                                            <i class="metismenu-icon">
                                            </i>Tipo de Clasificación
                                        </a>
                                    </li>
                                    <li class="@(ViewData["Title"].ToString() == "Servicios" ? "mm-active active-GFD" : "")">
                                        <a href="/Services/Get/0">
                                            <i class="metismenu-icon">
                                            </i>Servicios
                                        </a>
                                    </li>
                                    <li class="@(ViewData["Title"].ToString() == "Descuentos" ? "mm-active active-GFD" : "")">
                                        <a href="/Discounts/Get/0">
                                            <i class="metismenu-icon">
                                            </i>Descuentos
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </li>

                }
                @{
                    var url = ViewContext.RouteData.Values["Controller"].ToString() + "-" + ViewContext.RouteData.Values["Action"].ToString();
                    var controller = ViewContext.RouteData.Values["Controller"].ToString();
                }

                @if (Auth.Login.HasRoles("Admin|Supervisor|Super|Isabi"))
                {
                    <li class="@(controller == "Agreement" ? "mm-active" : "")">
                        @if (Plataform.IsAyuntamiento)
                        {
                            <a href="/Agreement/List"><i class="metismenu-icon fas fa-paste"></i>Predios</a>
                        }
                        else
                        {
                            <a href="/Agreement/List"><i class="metismenu-icon fas fa-paste"></i>Contratos</a>
                        }
                    </li>
                }

                @if (Auth.Login.HasRoles("Admin|Supervisor|Super"))
                {
                    <li>
                        <a href="#">
                            <i class="metismenu-icon fas fa-percent"></i>
                            Descuentos
                            <i class="metismenu-state-icon fa fa-angle-down caret-left"></i>
                        </a>
                        <ul>
                            <li class="@(url == "Discounts-Index" ? "mm-active active-GFD" : "") @(url == "Discounts-ViewDiscountVulnerable" ? "mm-active active-GFD" : "")">
                                <a href="/Discounts/AgreementList">
                                    <i class="metismenu-icon">
                                    </i>Población Vulnerable
                                </a>
                            </li>
                        </ul>
                    </li>
                }

                @if (Auth.Login.HasRoles("Admin|Supervisor|Super|Ordenes|User|Isabi"))
                {
                    <li>
                        <a href="#">
                            <i class="metismenu-icon fas fa-file-alt"></i>
                            Ordenes
                            <i class="metismenu-state-icon fa fa-angle-down caret-left"></i>
                        </a>
                        <ul>
                            <li class="@(url == "Ordenes-Index" ? "mm-active active-GFD" : "")">
                                <a href="/Ordenes/Index">
                                    <i class="metismenu-icon">
                                    </i>Ordenes de Pago
                                </a>
                            </li>
                            <li class="@(url == "Ordenes-SearchOrderByDateIndex" ? "mm-active active-GFD" : "")">
                                <a href="/Ordenes/SearchOrderByDate/Index">
                                    <i class="metismenu-icon">
                                    </i>Búsqueda de Ordenes
                                </a>
                            </li>
                            <li class="@(url == "TaxUsers-GetListTaxUsersIndex" ? "mm-active active-GFD" : "")">
                                <a href="/TaxUser/GetListTaxUsers/Index">
                                    <i class="metismenu-icon">
                                    </i>Registro de Contribuyentes
                                </a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

